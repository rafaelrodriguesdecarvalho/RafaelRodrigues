programa
{
	
	funcao inicio()
	{
		logico par, positivo
		inteiro num

		escreva("Digite um número: ")
		leia(num)

		par = num % 2 == 0
		positivo = num >= 0

		escreva("O número ", num, " é  par? \n", par)
		escreva("\nO número ", num, " é positivo? \n", positivo)

		
	}
}
