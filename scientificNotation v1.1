programa
{
	inclua biblioteca Matematica --> mat
	
	funcao inicio()
	{	
		cadeia x = " x 10 ^ "
		inteiro expoente = 1
		real copiaBase, base

		escreva("Digite número para ser a base:\n")
		leia(copiaBase)

		se(copiaBase < 0)
		{
			base = copiaBase * (-1)
		}
		senao
		{
			base = copiaBase
		}

		escreva("Digite um número para ser o expoente:\n(Se o expoente não aparecer ele é 1)\n")
		leia(expoente)

		enquanto(base >= 10 )
		{
			base = base / 10 
			expoente = expoente + 1 
		}

		enquanto(base < 1 e base > 0)
		{
			base = base * 10 
			expoente = expoente - 1

			se(expoente == 0)
			{
			expoente = -1
			}
		}

		se(base < 10 e base >= 1)
		{
			se(copiaBase < 0)
			{
				escreva ("-", base, x, expoente)
			}
			senao
			{
				escreva (base, x, expoente)
			}
		}
	}
}
